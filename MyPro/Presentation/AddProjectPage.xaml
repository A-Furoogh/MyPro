<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPro.Presentation.AddProjectPage"
             Title="AddProjectPage">

    <StackLayout Padding="10">
        <Label Text="Add New Project" FontSize="Large" />

        <Entry x:Name="ProjectNameEntry" Placeholder="Project Name" />
        <Entry x:Name="ProjectDescriptionEntry" Placeholder="Project Description" />
        <DatePicker x:Name="StartDatePicker" />
        <DatePicker x:Name="EndDatePicker" />

        <Button Text="Save Project"
            Clicked="OnSaveProjectClicked"/>
    </StackLayout>
</ContentPage>